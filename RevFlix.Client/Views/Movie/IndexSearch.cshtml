@model List<RevFlix.Client.Models.MovieIntModel>

<h1>RevFlix: Movie Search by Title Results<br/></h1>
	@if (@Model.Count == 0 || @Model == null)
  {
    <h2>Your search returned no results</h2>
  }
  else
  {
    <table class="table table-bordered table-responsive table-hover">
      <caption></caption>
			<thead>
        <th id="tableHead"></th>
				<tr style="text-align: center; vertical-align: middle;">
					<td><strong>Title</strong></td>
					<td><strong>Year Released</strong></td>
					<td><strong>IMDB ID</strong></td>
          <td></td>
  			</tr>
			</thead><br/>
			<tbody>
        @foreach (var movie in @Model)
        {
          <tr>
					<td>
            <a asp-controller="Movie" asp-action="DisplayDetails"
                asp-route-Imdb_id="@movie.Imdb_id">@movie.Title</a>
          </td>
          <td style="text-align: center; vertical-align: middle;" value="@movie.Year">@movie.Year</td>
          <td style="text-align: center; vertical-align: middle;" value="@movie.Imdb_id">@movie.Imdb_id</td>
          <td>
            <div class="AddtoList">
            <p class="button">
                <a class="btn btn-primary" asp-controller="List" asp-action="AddToList"
                    asp-route-Imdb_id="@movie.Imdb_id">Add to Watch list</a>
            </p>
            </div>
          </td>
					</tr>
        }
			</tbody>
		</table>
  <br/>

  }