<h1>RevFlix: Movie Search by Title Results<br/></h1>
	@if (@Model.Count == 0 || @Model == null)
  {
    <h2>Your search returned no results</h2>
  }
  else
  {
    <table class="table table-bordered table-responsive table-hover">
      <caption>Results Table</caption>
			<thead>
				<tr align="center">
					<th><strong>Title</strong></th>
					<th><strong>Year Released</strong></th>
					<th><strong>IMDB ID</strong></th>
          <th></th>
  			</tr>
			</thead><br/>
			<tbody>
        @foreach (var movie in @Model)
        {
          <tr>
					<td>
            <a asp-controller="Movie" asp-action="DisplayDetails"
                asp-route-Imdb_id="@movie.Imdb_id">@movie.Title</a>
          </td>
          <td align="center" value="@movie.Year">@movie.Year</td>
          <td align="center" value="@movie.Imdb_id">@movie.Imdb_id</td>
          <td>
            <div class="AddtoList">
            <p class="button">
                <a class="btn btn-primary" asp-controller="List" asp-action="AddToList"
                    asp-route-Imdb_id="@movie.Imdb_id">Add to Watch list</a>
            </p>
            </div>
          </td>
					</tr>
        }
			</tbody>
      @* <tfoot>
        <tr>
          <td></td>
          <td></td>
          <td><b>No. of Results = @Model.Results</b></td>
        </tr>
      </tfoot> *@
		</table>
  <br/>

  }