@model RevFlix.Client.Models.MovieIntModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to RevFlix!</h1>
    <p></p>
</div>

@* <a class="nav-link text-dark" asp-controller="Movie" asp-action="Index">Movies</a> *@
<form method="POST" asp-controller="Movie" asp-action="IndexSearch">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" id="movie" placeholder="Search Movies" name="userInput" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>